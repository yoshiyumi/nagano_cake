<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "名前"  %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "フリガナ" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "フリガナ" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)"%>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>

    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
<% end %>

<h6>既に登録済みの方</h6>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
