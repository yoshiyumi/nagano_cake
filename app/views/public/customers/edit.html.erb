<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>会員情報編集</h1>

  		<%= form_with model:@customer, local: true do |f| %>

  		<div class="form-group">
       <label for="customer_name">氏名</label>
       <div class = "row">
         <div class = "col-md-6" >
           <%= f.text_field :last_name, class:"form-control customer_first_name"%>
         </div>
         <div class = "col-md-6" >
           <%= f.text_field :first_name, class:"form-control customer_last_name"%>
         </div>
       </div>


      </div>

      <div class="form-group">
       <label for="customer_postal_code">フリガナ</label>
       <div class = "row">
         <div class = "col-md-6" >
           <%= f.text_field :last_name_kana, class:"form-control customer_first_name_kana"%>
         </div>
         <div class = "col-md-6" >
           <%= f.text_field :first_name_kana, class:"form-control customer_last_name_kana"%>
         </div>
       </div>


      </div>



      <div class="form-group">
       <label for="customer_postal_code">郵便番号</label>
       <%= f.text_field :postal_code, class:"form-control customer_postal_code"%>
      </div>
      <div class="form-group">
        <label for="customer_address">住所</label>
        <%= f.text_area :address, class:"form-control customer_address"%>
      </div>

      <div class="form-group">
        <label for="customer_telephone_number">電話番号</label>
        <%= f.text_area :telephone_number, class:"form-control customer_telephone_number"%>
      </div>

      <div class="form-group">
        <label for="customer_email">メールアドレス</label>
        <%= f.text_area :email, class:"form-control customer_email"%>
      </div>



      <div class = "row">
        <div class = "col-md-6" >
          <div class="form-group">
           <%= f.submit "編集内容を保存",  class:"btn btn-success"%>
          </div>
        </div>

        <div class = "col-md-6" >
         <%= link_to "退会する", customers_confirm_path, class:"btn btn-sm btn-danger" %>
        </div>
      </div>



      <% end %>

    </div>
  </div>
</div>