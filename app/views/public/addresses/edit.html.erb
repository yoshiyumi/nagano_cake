<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>配送先編集</h1>
      <%= form_with model:@address, local: true do |f| %>
      
      <div class="form-group">
       <label for="address_postal_code">郵便番号（ハイフンなし）</label>
       <%= f.text_field :postal_code, class:"form-control address_postal_code"%>
      </div>
      
      <div class="form-group">
        <label for="address">住所</label>
        <%= f.text_area :address, class:"form-control address"%>
      </div>
      
      <div class="form-group">
        <label for="name">宛名</label>
        <%= f.text_area :name, class:"form-control name"%>
      </div>
      
      <div class="form-group">
        <%= f.submit "変更内容を保存",  class:"btn btn-success"%>
      </div>
      <% end %>
    </div>
  </div>
</div>