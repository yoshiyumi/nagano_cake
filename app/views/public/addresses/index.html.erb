<div class = "container">
<h1>配送先登録/一覧</h1>



      <%= form_with model: @address,url: addresses_path,method: :post, local:true do |f| %>
      <div class="form-group">
       <div class = "row">
         <div class = "col-md-3" >
            <label for="postal_code">郵便番号（ハイフンなし）</label>
           </div>
           <div class = "col-md-3" >
             <%= f.text_field :postal_code, class:"form-control postal_code" %>
           </div>
        </div>
      </div>
      
      <div class="form-group">
       <div class = "row">
         <div class = "col-md-3" >
            <label for="address">住所</label>
           </div>
           <div class = "col-md-3" >
             <%= f.text_area :address, class:"form-control address" %>
           </div>
        </div>
      </div>
      
      <div class="form-group">
       <div class = "row">
         <div class = "col-md-3" >
            <label for="name">宛名</label>
           </div>
           <div class = "col-md-3" >
             <%= f.text_field :name, class:"form-control name" %>
           </div>
        </div>
      </div>
      
      <div class="form-group">
       <%= f.submit "新規登録", class:"btn btn-secondary" %>
      </div>
      <% end %>

 <table class = "table table-bordered">
      <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr class="address-box">
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>

            <td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "削除する", address_path(address.id), method: :delete,data: {confirm: "削除しますか？"}, class:"btn btn-sm btn-danger" %></td>

        </tr>
      <% end %>




    </tbody>
</table>
 </div>

