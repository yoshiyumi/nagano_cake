
  <div class="container">


      <h2>注文履歴詳細</h2>

      <div class = "row">
        <div class = "col-md-7" >
          <h4>注文情報</h4>
           <table class = "table table-bordered">
             <tbody>
               <tr class="order-box">
                 <tr>
                   <th>注文日</th>
                   <td>
                     <%= @order.created_at.strftime("%Y-%m-%d %H:%M") %>
                   </td>
                 </tr>

                 <tr>
                   <th>配送先</th>
                   <td>
                     <%= @order.full_address %><br><%= @order.name %>
                   </td>
                 </tr>

                 <tr>
                   <th>支払方法</th>
                   <td>
                     <%= @order.payment_method_i18n %>
                   </td>
                 </tr>

                 <tr>
                   <th>ステータス</th>
                   <td>
                     <%= @order.status_i18n %>
                   </td>
                 </tr>

               </tr>
             </tbody>
          </table>
       </div>

       <div class = "col-md-5" >
         <h4>請求情報</h4>
          <table class = "table table-bordered">
            <tr class="payment-box">
              <tr>
                <th>商品合計</th>
                <td>
                 <%= @order.total_payment %>
                </td>
              </tr>
              <tr>
               <th>配送料</th>
                  <td>
                   <%= @order.postage %>
                 </td>
              </tr>
              <tr>
               <th>ご請求額</th>
               <td>
                 <%= @order.total_payment += @order.postage %>
               </td>
              </tr>
            </tr>
         </table>
       </div>
      </div>



      <h4>注文内容</h4>
      <table class = "table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail|%>
            <tr class="order-box">
             
              <td><%= order_detail.item.name %> </td>
              <td>
                <%= order_detail.price %>
              </td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price*order_detail.amount %></td>
             
            </tr>
          <% end %>

        </tbody>
      </table>

  </div>
