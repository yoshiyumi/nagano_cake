<div class = "container">
 <h2><%= @customer.full_name %>さんの会員詳細</h2>

    <table class="table table-hover table-inverse">
      <tbody>
        <tr class="customer-box">
           <td>会員</td>
           <td>
             <%= @customer.id %>
           </td>
        </tr>

        <tr>
           <td>名前</td>
           <td>
             <%= @customer.full_name %>
           </td>
        </tr>

        <tr>
           <td>フリガナ</td>
           <td>
             <%= @customer.last_name_kana %>
             <%= @customer.first_name_kana %>
           </td>
        </tr>

        <tr>
           <td>郵便番号</td>
           <td>
             <%= @customer.postal_code %>
           </td>
        </tr>

        <tr>
           <td>住所</td>
           <td>
             <%= @customer.address %>
           </td>
        </tr>

        <tr>
           <td>電話番号</td>
           <td>
             <%= @customer.telephone_number %>
           </td>
        </tr>

        <tr>
           <td>メールアドレス</td>
           <td>
             <%= @customer.email %>
           </td>
        </tr>

        <tr>
           <td>会員ステータス</td>
           <% if @customer.is_active == true %>
           <td><%= "有効" %></td>
           <% else %>
           <td><%= "退会" %></td>
           <% end %>
         </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-sm btn-success" %>

    <%= link_to "注文履歴一覧を見る", admin_path, class:"btn btn-sm btn-primary" %>
 </div>
