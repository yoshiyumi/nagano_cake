
 <div class="container">
    <div class="row">
      <div class="col-md-5">
        <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg', class:"attachment image fallback" %>
     </div>
     <div class="col-md-5 ">
        <h2>商品一覧</h2>
        <table class="table table-hover table-inverse">
      <tbody>
         <tr class="item-box">
           <td>商品名</td>
           <td><%= @item.name %></td>
         </tr>
         <tr class="item-box">
           <td>商品説明</td>
           <td><%= @item.introduction %></td>
         </tr>
         <tr class="item-box">
           <td>ジャンル</td>
           <td><%= @item.genre.name %></td>
         </tr>
         <tr class="item-box">
           <td>税込価格<br>(税抜価格)</td>
           <td><%= @item.with_tax_price %>(<%= @item.price %>)</td>
         </tr>
         <tr class="item-box">
           <td>販売ステータス</td>
           <% if @item.is_active == true %>
           <td><%= "販売中" %></td>
           <% else %>
           <td><%= "販売停止" %></td>
           <% end %>
         </tr>
        <td><%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-sm btn-success" %></td>
      </tbody>
    </table>
 </div>
 </div>
 </div>

