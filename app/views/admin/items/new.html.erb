<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>商品新規登録</h1>
        <%= form_with model: @item,url: admin_items_path, local:true do |f| %>
        <table>
          <div class="form-group">
            <label for="image">商品画像</label>
            <%= f.attachment_field :image, placeholder: "画像", class:"form-control-file image" %>
          </div>

          <div class="form-group">
            <label for="name">商品名</label>
            <%= f.text_area :name, class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="introduction">商品説明</label>
            <%= f.text_field :introduction, class:"form-control introduction" %>
          </div>
          <div class="form-group">
            <label for="genre">ジャンル</label>
            <%= f.collection_select(:genre_id, @genres, :id, :name) %>
          </div>
          <div class="form-group">
            <label for="price">税抜価格</label>
            <div class = "row">
            <div class = "col-md-6" >
             <%= f.text_field :price, class:"form-control price" %>
            </div>
            <div class = "col-md-6" >
              円
            </div>
            </div>
          </div>
          <div class="form-group">
            <label for="status">販売ステータス</label>
            <%= f.radio_button :is_active, :true , checked: "checked" %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止", {value: :false, style: "display: inline-block;"} %>
          </div>
          <div class="form-group">
            <%= f.submit "新規登録", class:"btn btn-secondary" %>
          </div>
        </table>
        <% end %>
      </div>
   </div>
 </div>