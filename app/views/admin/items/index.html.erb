<div class="container">
      <div class="row">
         <div class = "row">
          <div class = "col-md-6" >
              <h1>商品一覧</h1>
          </div>
          <div class = "col-md-6" >
              <td><%= link_to "＋", new_admin_item_path, class:"btn btn-primary rounded-circle "%></td>
          </div>
              <table class = "table table-bordered">
                   <thead>
                       <tr>
                           <th>商品ID</th>
                           <th>商品名</th>
                           <th>税抜価格</th>
                           <th>ジャンル</th>
                           <th>ステータス</th>
                       </tr>
                 </thead>
                 <tbody>
                     <% @items.each do |item| %>
                     <tr class="item-box">
                         <td><%= item.id %></td>
                         <td><%= link_to item.name, admin_item_path(item.id)%></td>
                         <td><%= item.price %></td>
                         <td><%= item.genre.name %></td>
                         <% if item.is_active == true %>
                         <td><%= "販売中" %></td>
                         <% else %>
                         <td><%= "停止" %></td>
                         <% end %>
                     </tr>
                     <% end %>
                  </tbody>
              </table>


                 <%= paginate @items, theme: 'twitter-bootstrap-4' %>



      </div>
 </div>